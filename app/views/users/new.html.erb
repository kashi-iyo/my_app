<div class="UsersWrap">
  <h1 class="users-h1">新規登録</h1>

  <% @user.errors.full_messages.each do |message| %>
    <p style="margin-left: 40px; letter-spacing: 2px;
    color: rgb(121, 0, 0); "><%= message %></p>
  <% end %>

  <div class="form">

    <%= form_tag("/users/create") do %>

      <label for="name">
        名前<input type="text" autocomplete="off" id="name" name="name" value="">
      </label>
      <label for="email">
        メールアドレス<input type="text" autocomplete="off" id="email" name="email" value="">
      </label>
      <label for="password">
        パスワード<input type="password" id="password" name="password">
      </label>

      <input type="submit" value="登録">

        <% end %>
  </div>

</div>
