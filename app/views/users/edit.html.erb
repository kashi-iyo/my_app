<div class="UsersWrap">
  <h1 class="users-h1">ユーザー情報の編集</h1>

<%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>

  <div class="users-show-box">

    <% @user.errors.full_messages.each do |message| %>
      <p class="error-p"><%= message %></p>
    <% end %>

    <div class="users-show-index">
      <div class="users-show-img">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <input type="file" name="image" value="アップロード">
      </div>

      <div class="users-prof">
        <div class="name">
          <p>名前</p><input type="text" name="name" autocomplete="off" value="<%= @user.name %>">
        </div>
        <div class="email">
          <p>メールアドレス</p><input type="text" autocomplete="off" name="email" value="<%= @user.email %>">
        </div>
        <p class="okedit">
          <input type="submit" value="編集を決定">
        </p>
      </div>

    </div>

  </div>

  <% end %>

</div>
