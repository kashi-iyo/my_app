<div class="PostsWrap">
  <h1 class="posts-h1">チャット形式やで</h1>

  <ul class="posts">

  <% @posts.each do |post| %>


    <li class="posts__list">
      <%= link_to(post.content, "/posts/#{post.id}/show") %>
    </li>
    <li class="posts__time">
      <%= post.created_at %>
    </li>

  <% end %>

  </ul>

</div>
