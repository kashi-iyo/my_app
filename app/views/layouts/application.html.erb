<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Odibee+Sans|Oswald:600&display=swap" rel="stylesheet">
  </head>

  <body>
    <% if @current_user %>
     <p class="session_user"><%= link_to("#{@current_user.name}", "/users/#{@current_user.id}/show") %>
        がログインなう</p>
    <% end %>
        <% if flash[:notice] %>

      <div class="flash">

        <%= flash[:notice] %>

      </div>

      <% end %>

    <header class="Header">
        <div class="Header__top">
            <p class="Header__top__icon">
              <%= link_to("HOME", "/") %>
            </p>
        </div>
      <% if @current_user %>
        <div class="Header__bottom">
            <ul class="Header__bottom__ul">
                <li>
                    <%= link_to("新規投稿", "/posts/new") %>
                </li>
                <li>
                    <%= link_to("投稿一覧", "/posts/index") %>
                </li>
                <li>
                    <%= link_to("ユーザー一覧", "/users/index") %>
                </li>
                <li>
                    <%= link_to("ログアウト", "/logout", {method: "post"}) %>
                </li>
            </ul>
          </div>
        <% end %>
        <% if @current_user == nil %>
          <div class="Header__bottom2">
              <ul class="Header__bottom__ul">
                <li>
                    <%= link_to("ログイン", "/users/login_form") %>
                </li>
                <li>
                    <%= link_to("新規登録","/users/new") %>
                </li>
              </ul>
            </div>
          <% end %>
    </header>
    <%= yield %>
  </body>
</html>
